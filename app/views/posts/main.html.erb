      <div class="mainlogin">      
      <% if user_signed_in? %>
      <!-- 혹시 몰라서 로그아웃을 만들어 놓음  -->
        <%= button_to '로그아웃', destroy_user_session_path, method: 'delete', class: "btnmain" %>
      <% else %>
        <p><%= button_to '로그인', new_user_session_path, class: "btnmain" %></p>

        <p><%= link_to '회원가입', new_user_registration_path, class: "btnmain_sign_in" %></p>
        

      </div>
      <% end %>
      <!-- Page Footer -->
      <%= render 'footer' %>
</div>




