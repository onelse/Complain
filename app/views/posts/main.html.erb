<!-- Page Content -->
<div class="container main">
      <%= render '/posts/logo' %>
      <div class="mainmentbox">
        <div class="mainment" style="writing-mode: tb-rl;">
          <div class="mainment1">
            <span class="ment">불</span><span>만</span></br>
          </div>
          <div class="mainment2">
            <span class="ment">모</span><span>든</span></br>
          </div>
          <div class="mainment3">
            <span class="ment">세</span><span>상의</span>
          </div>
        </div>
