<%= render '/posts/logo' %>
<div class="d_main">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="d_inputbox">
    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true, label:'이메일', maxlength: "30" %>
      <%= f.input :password, required: true, label: '비밀번호', hint: ("#{@minimum_password_length} 글자 이상을 입력해주세요." if @minimum_password_length) %>
      <%= f.input :password_confirmation, required: true, label: '비밀번호 확인' %>
      <%= f.label "닉네임" %>
      <%= f.text_field :nickname, :required => true, maxlength: "10"%>
    </div>  
  </div>
  <%= f.error_notification %>

  <div class="d_button">
    <div class="form-actions">
      <%= f.button :submit, "회원가입", class:"btnlogin btnlogin-primary" %>
    </div>
  </div>
  <% end %>

  <%= link_to '뒤로가기', :back, class: "d_link" %>
</div>
<%= render '/posts/footer' %>